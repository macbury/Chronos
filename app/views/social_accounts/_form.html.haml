= form_for @social_account do |f|
  -if @social_account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@social_account.errors.count, "error")} prohibited this social_account from being saved:"
      %ul
        - @social_account.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :token
    = f.text_field :token
  .field
    = f.label :uid
    = f.text_field :uid
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
