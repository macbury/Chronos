.block.center
  %h2 
    Logowanie do serwisu
    = params[:type].classify
  %p 
    Wpisz swoje hasło oraz login
  = form_tag [params[:type].to_sym] do
    %p
      = label_tag "login", "Login"
      %br/
      = text_field_tag "login", ""
    %p
      = label_tag "password", "Hasło"
      %br/
      = password_field_tag "password", ""

    = submit_tag "Dalej"
    albo
    = link_to "Anuluj", social_accounts_path, :class => "button"
