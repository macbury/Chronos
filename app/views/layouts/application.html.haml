!!! 5
%html
  %head
    %title TZ
    = stylesheet_link_tag "layout"
    %meta{ :name => "rhCoreRoot", :content => RhCore::Config["site"] }/
    - if self.access_token
      %meta{ :name => "rhCoreAccessToken", :content => self.access_token.token }/
    - if logged_in?
      %meta{ :name => "auth_token", :content => self.current_user.id }/
    = csrf_meta_tag
    = javascript_include_tag "jquery.min.js", "jquery.flot.js", "application", "rails", "dashboard"
    = javascript_include_tag File.join([RhCore::Config["site"], "javascripts", "rhcore.js"])
  %body
    .wrapper
      %ul.menu
        %li= link_to "ZgÅ‚oszenia", root_path
      = link_to "Logo", root_path, :class => "logo"
      .clear
      - if flash[:notice]
        .box.notice= notice
      .clear
      - unless yield(:sidebar).empty?
        .content= yield
        .sidebar= yield :sidebar
      - else
        .content.full= yield
      .clear
      .footer= "TZ 2010/#{Date.current.year} dla rhmusic.pl, Arkadiusz Buras"
        
