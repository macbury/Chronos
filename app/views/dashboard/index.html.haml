%ul.actions
  %li
    = link_to new_update_path do
      = image_tag "post.png"
.clear
.block
  %h2 Kokpit
  %ul.list
    - @updates.each do |update|
      %li.post{ :class => cycle("normal", "alt") }
        %h4
          = link_to update.title, update
        .body= truncate(strip_tags(update.body), :length => 342)
        .info
          Dodane:
          = l(update.publish_at, :format => :long) if update.publish_at

