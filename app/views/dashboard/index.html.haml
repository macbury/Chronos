.clear

%ul.list
  - @updates.each do |update|
    %li.update{ :class => cycle("normal", "alt") }
      %h4
        .date
          Dodane:
          = l(update.publish_at, :format => :long) if update.publish_at
        = link_to update.title, update
      .body= truncate(strip_tags(update.body), :length => 342)
      %ul.views
        %li= link_to "Linki", "#", :class => "selected"
        %li= link_to "Reakcje", "#"
        %li= link_to "Statystyki", "#"
      .clear
    %li.links
      - update.links.each do |link|
        %li= link.uid
- content_for :sidebar do
  = render :partial => "dashboard/sidebar"