= form_for @update do |f|
  -if @update.errors.any?
    #error_explanation
      %h2= "#{pluralize(@update.errors.count, "error")} prohibited this update from being saved:"
      %ul
        - @update.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :tags
    = f.text_field :tags
  .field
    = f.label :publish_at
    = f.datetime_select :publish_at
  .actions
    = f.submit 'Save'
